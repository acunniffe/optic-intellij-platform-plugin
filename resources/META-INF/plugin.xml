<idea-plugin>
  <id>com.opticdev.ideplugins.jetbrains</id>
  <name>Optic</name>
  <version>1.2</version>
  <vendor email="aidan@useoptic.com" url="https://useoptic.com">Optic</vendor>

  <application-components>
    <component>
      <implementation-class>com.opticdev.ideplugins.jetbrains.Optic</implementation-class>
    </component>
  </application-components>

  <description><![CDATA[
      A lightweight plugin that allows you to use Optic with any JetBrains IDE
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <backspaceHandlerDelegate implementation="com.opticdev.ideplugins.jetbrains.specialKeysMonitoring.Backspace"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>